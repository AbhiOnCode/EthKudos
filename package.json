{
  "name": "kudoschain",
  "version": "0.0.1",
  "description": "Kudos system on Ethereum blockchain",
  "author": "Pedro Guti√©rrez<info@xitrus.es>",
  "homepage": "eth-kudos.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pedro-vk/EthKudos"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ng serve --extract-css",
    "build": "npm run clean:sol:build && ng build --prod --aot --vendor-chunk false",
    "deploy:dev": "truffle deploy --network dev && npm run clean:sol:build",
    "deploy:ropsten": "truffle deploy --network ropsten && npm run clean:sol:build",
    "lint": "npm run lint:sol && npm run lint:ng",
    "lint:ng": "ng lint",
    "lint:sol": "solium -d contracts/",
    "lint:fix": "npm run lint:sol:fix",
    "lint:sol:fix": "solium -d contracts/ --fix",
    "test": "npm run test:sol && npm run test:ng",
    "test:ng": "ng test --code-coverage --single-run",
    "test:ng:watch": "ng test --code-coverage",
    "test:sol": "solidity-coverage && mv coverage coverage-sol",
    "test:sol:dev": "truffle test --network dev",
    "test:sol:live": "truffle test --network ropsten",
    "merge:sol:build": "sol-merger \"./contracts/*.sol\" ./build/merged",
    "clean:sol:build": "for i in build/contracts/*.json; do npx jq '{contractName, abi, bytecode, deployedBytecode, compiler, networks, schemaVersion, updatedAt}' \"$i\" > \"$i.tmp\" && mv \"$i.tmp\" \"$i\"; done",
    "create-cname": "echo $(cat package.json | grep '\"homepage\"' | cut -d '\"' -f 4) > dist/CNAME",
    "heroku": "cp -fr ./.heroku/. ./dist",
    "gh-pages-travis": "cp dist/index.html dist/404.html && npm run create-cname && npm run heroku && gh-pages-travis"
  },
  "dependencies": {
    "@angular/animations": "^5.2.9",
    "@angular/cdk": "^5.2.4",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/material": "^5.2.4",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@angular/service-worker": "^5.0.0",
    "blockies": "0.0.2",
    "core-js": "^2.5.4",
    "detect-browser": "^2.2.0",
    "karma-chrome-launcher": "^2.2.0",
    "lcov-result-merger": "^2.0.0",
    "metamask-logo": "^2.1.4",
    "sol-merger": "^0.1.2",
    "truffle-contract": "^3.0.4",
    "web3": "1.0.0-beta.33",
    "zeppelin-solidity": "1.8.0",
    "zone.js": "^0.8.25"
  },
  "devDependencies": {
    "@angular-devkit/core": "^0.5.4",
    "@angular/cli": "^1.7.4",
    "@angular/compiler-cli": "^5.2.9",
    "@angular/language-service": "^5.0.0",
    "@types/cytoscape": "^3.1.7",
    "@types/google.analytics": "0.0.39",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^9.6.2",
    "abi-decoder": "^1.1.0",
    "codelyzer": "^4.0.1",
    "coveralls": "^3.0.0",
    "cytoscape": "^3.2.11",
    "gh-pages-travis": "^1.0.4",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jq-cli-wrapper": "^0.4.0",
    "karma": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^1.0.0",
    "protractor": "^5.3.1",
    "rxjs": "^5.5.8",
    "rxjs-tslint-rules": "^3.16.1",
    "solidity-coverage": "^0.4.15",
    "solium": "^1.1.6",
    "truffle": "^4.1.5",
    "truffle-hdwallet-provider": "github:trufflesuite/truffle-hdwallet-provider",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.8.1"
  }
}
