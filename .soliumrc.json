{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "arg-overflow": ["warning", 3],
    "indentation": ["error", 2],
    "lbrace": "off",
    "quotes": ["error", "double"],
    "security/enforce-explicit-visibility": ["error"],
    "security/no-block-members": ["off"],
    "security/no-inline-assembly": ["warning"]
  }
}
